<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    >

    <ImageView
        android:scaleType="centerCrop"
        android:background="@drawable/deal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView_list_prod"/>

    <TextView
        android:visibility="gone"
        android:layout_marginTop="2dp"
        android:id="@+id/txt_Expired"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/five_margin"
        android:paddingBottom="@dimen/five_margin"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:text="Expired"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:paddingBottom="@dimen/ten_margin"
        android:gravity="bottom"
        android:background="@drawable/grey_layer"

        android:id="@+id/relayout"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="@dimen/ten_margin"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Super duper Cheesy Pizza @ Pizza Hut"
         android:id="@+id/txt_list_product_name"
        />
      <TextView
          android:layout_marginLeft="@dimen/ten_margin"

          android:layout_marginTop="@dimen/ten_margin"
          android:textColor="@color/colorsecondText"
          android:textStyle="bold"
          android:textSize="14sp"
          android:text="SOLD"
          android:layout_below="@+id/txt_list_product_name"
          android:id="@+id/txt_list_sold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/eight_margin"

        android:layout_marginLeft="10px"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_list_product_name"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/txt_list_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="12,500"
            android:id="@+id/txt_list_orign_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="@dimen/ten_margin"

            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:id="@+id/text_mmk_stike"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" MMK"/>
        <TextView
            android:id="@+id/txt_listPromotion"
            style="@style/style_textView_Primary_price"
            android:text="85,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/style_textView_Primary_price"
            android:id="@+id/text_mmk"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" MMK"/>
    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
